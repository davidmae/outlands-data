@setvar CurrentTarget 0
   
while not dead 
    wait 1000
    #if not bandaging and hp < maxhp
#        hotkey "Bandage Self"
#    endif
#    wait 100
#    

    if dead CurrentTarget
        overhead "Target is dead" 34
        @setvar CurrentTarget 0
    endif
    
    wait 1000
    
    if hits < 80
        cast 'Noble Sacrifice'
        wft
        target self
        wait 1500
    endif
    
    wait 2000
    
    overhead 'Lets fight!'
    
    hotkey 'Target Closest Non-Friendly Monster'
    @setvar CurrentTarget lasttarget
    wait 500
    
    getlabel CurrentTarget desc
    overhead desc
    wait 500
    attack CurrentTarget
    wait 500
    skill "Peacemaking"
    wait 500
    target CurrentTarget
    wait 500

    getlabel CurrentTarget desc
    overhead desc
    
    overhead 'Loop'
    
    
endwhile