#                    settimer check_time_dis 0
#                endif
        else
            skill 'discordance'
            wait 500
            target curr_target
            wait 200
            overhead enemy info_color
        endif  
    else 
        skill 'peacemaking'
        wait 500
        target curr_target
    endif
    
    wait 1000
    
    if insysmsg "barding break"
        overhead "*** RUN ***" 5
    endif
    
    if not bandaging and hp < 97
        hotkey "Bandage Self"
    endif

    wait 500

    if findtype 8198 ground -1 -1 5
        skill 'forensicevaluation'
        wait 250
        target self
    endif
  
