# Kings Faire 2023 get a Balloon and Equip by Jaseowns
# UO Outlands
if findtype "balloon cart" ground -1 -1 2 as item
    dclick item
    wait 650
    say "bank"
    wait 650
else
    overhead "Move closer to balloon cart near main town center" 34
    wait 500
    replay
endif

if findtype "balloon" self as jalloon
    dclick jalloon
endif