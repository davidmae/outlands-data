overhead "[+Start PeaceNearest]" 111
clearall 

hotkey 'target closest non-friendly monster'
wait 200
if insysmsg "no one matching"
    overhead  "Nothing to attack" 34

    wait 200
    hotkey "Play Script: _davidma\PVM\auto-heal"
    stop
endif

@setvar! myKillTarget lasttarget


clearignore 
useskill 'Peacemaking'
wft 500
attack myKillTarget

#if targetexists 
target myKillTarget
wft 150
if insysmsg "You fail to pacify your opponent. You estimate the task to be fairly reasonable."
    overhead "Failed to pacify" 34
    wait 100
endif

getlabel myKillTarget description
overhead description 191

#endif


wait 200
hotkey "Play Script: _davidma\PVM\auto-heal"